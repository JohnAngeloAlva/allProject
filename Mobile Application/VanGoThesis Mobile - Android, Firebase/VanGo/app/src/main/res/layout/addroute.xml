<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddRoute">

    <TextView
        android:id="@+id/shape"
        android:layout_width="401dp"
        android:layout_height="220dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/rectangle"
        android:shadowDx="0" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="180dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="ADDING ROUTE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shape">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TERMINAL -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textTerminal"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Terminal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textInputTerminal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:minHeight="48dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Destination -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textTravelDestination"
                android:layout_width="315dp"
                android:layout_height="71dp"
                android:hint="Destination">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputDestination"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- DRIVER NAME -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textDriversName"
                android:layout_width="315dp"
                android:layout_height="71dp"
                android:hint="Driver Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputDriversName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Driver Number-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textDriverPhoneNum"
                android:layout_width="315dp"
                android:layout_height="71dp"
                android:hint="Driver Phone Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputDriversPhoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Time of Arrival: "/>
            <!-- Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textInputTimeArrival"
                    android:layout_width="200dp"
                    android:textSize="25dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="asdsad"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/timePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Pick Time"/>

            </LinearLayout>
            <!-- FARE RATE-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFareRate"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Fare Rate">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputFareRate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- CAPACITY-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textCapacity"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Capacity of Van">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputCapacity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Van Model -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/modelVan"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Model of Van">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputModelVan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PLATE NUMBER -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/plateNumber"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Plate Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputPlateNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="48dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:text="Cancel"
            android:backgroundTint="@color/purple_700"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/design_default_color_primary_variant"
            android:text="Add"
            android:layout_marginLeft="5dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="620dp"
        app:srcCompat="@drawable/uv" />

    <TextView
        android:id="@+id/accountLogin"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/emailLogin"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/fcmNumber"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>