<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="367dp"
        android:layout_height="562dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shape">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EMAIL -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textEmail"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- FULL NAME -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFullName"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Full Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PASSWORD -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textPassword"
                android:layout_width="315dp"
                android:layout_height="71dp"
                android:hint="Password"
                app:endIconMode="password_toggle"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    app:passwordToggleEnabled="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- CONFIRM PASSWORD -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textCPassword"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                app:endIconMode="password_toggle"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputCPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    app:passwordToggleEnabled="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- AGE -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textAge"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Age">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputAge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ADDRESS -->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textAddress"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Address">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PHONE NUMBER -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textphoneNum"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:hint="Phone Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputPhoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="275dp"
                android:layout_height="57dp"
                android:layout_marginTop="10dp"
                android:text="By continuing, I confirm that I have read and agree to the Terms &amp; Conditions and Privacy Policy"
                android:textColor="#656D74"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_Tae"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:fontFamily="@font/montserratbold"
                android:text="Sign up"
                android:textSize="12dp"
                app:backgroundTint="#BFA780" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>